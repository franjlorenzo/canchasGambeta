@using CanchasGambeta.Models;
@{var sesion = (Usuario)HttpContext.Current.Session["User"];}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Canchas Gambeta</title>
    <!--Fuentes-->
    <link href="@Url.Content("~/fonts/font.family-Catamaran.css")" />
    <link href="@Url.Content("~/fonts/font.family-Lato.css")" />
    <!--CSS personalizado-->
    <link rel="stylesheet" href="@Url.Content("~/Content/one-page-wonder.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/layout.css")" />
    <!--Bootstrap-->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <!--CSS Tablas-->
    <link rel="stylesheet" href="@Url.Content("~/Content/custom-table.css")" />
</head>

<body style="background-color: #1A1A1D;">
    @if (sesion == null)
    {
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container">
            @Html.ActionLink("Canchas Gambeta", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Registrarse", "Register", "Register", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Iniciar Sesion", "LogIn", "LogIn", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    }
    else if (sesion.rol == 1)
    {
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container">
            @Html.ActionLink("Canchas Gambeta", "IndexAdministrador", "Administrador", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Pedidos", "MisPedidos", "Pedido", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Instrumentos", "InstrumentosDisponibles", "Instrumento", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Insumos", "MisInsumos", "Insumo", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Mi perfil", "PerfilAdministrador", "Administrador", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Cerrar Sesión", null, "CerrarSesion", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    }
    else
    {
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container">
            @Html.ActionLink("Canchas Gambeta", "IndexCliente", "Cliente", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Reservar", "MisReservas", "Reserva", null, new { @class = "nav-link" })
                    </li>
                    @if (sesion.equipo == null || sesion.equipo == 0)
                        {
                    <li class="nav-item">
                        @Html.ActionLink("Nuevo equipo", "NuevoEquipo", "Equipo", null, new { @class = "nav-link" })
                    </li>
                        }
                        else
                        {
                    <li class="nav-item">
                        @Html.ActionLink("Mi equipo", "MiEquipo", "Equipo", null, new { @class = "nav-link" })
                    </li>
                        }
                    <li class="nav-item">
                        @Html.ActionLink("Mi perfil", "PerfilCliente", "Cliente", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Cerrar Sesión", null, "CerrarSesion", null, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    }

    <div class="body-content">
        @RenderBody()
    </div>
    <div class="push"></div>
    <footer class="footer" style="transform: translateY(70px);">
        <div>
            <div class="float-left ml-2">
                <p>&copy; @DateTime.Now.Year - Canchas Gambeta - Práctica Supervisada TUP UTN</p>
            </div>
            <div class="float-right mr-2">
                @Html.ActionLink("Términos y condiciones", "TerminosYCondiciones", "Home", null, new { @class = "font-weight-light", @style = "color: white;" }) | @Html.ActionLink("Ayuda", "Ayuda", "Home", null, new { @class = "font-weight-light", @style = "color: white;" })
            </div>
        </div>
    </footer>

    <!--JQuery-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>