@model CanchasGambeta.Models.Usuario
@{
    ViewBag.Title = "ModificarCliente";
}

<div class="container" style="color: white; transform: translateY(60px);">
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h3>Actualizar mis datos</h3>
            </div>
        </div>
    </div>
</div>

<div class="container" style="color: white; transform: translateY(60px);">
    @using (Html.BeginForm("ModificarCliente", "Cliente", FormMethod.Post, new { onsubmit = "return validacionModificarUsuario();" }))
    {
        @Html.HiddenFor(Model => Model.idUsuario)
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Nombre Completo</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(Model => Model.nombreCompleto, htmlAttributes: new { @class = "form-control", id = "txtNombre" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Correo electrónico</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(Model => Model.email, htmlAttributes: new { @class = "form-control", id = "txtEmail" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Teléfono</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(Model => Model.telefono, htmlAttributes: new { maxlength = 10, @class = "form-control", id = "txtTelefono" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Contraseña</label>
                        <div class="col-sm-6">
                            <input type="password" name="password" id="txtPassword" class="form-control" value="@Model.password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Confirmar Contraseña</label>
                        <div class="col-sm-6">
                            <input type="password" name="ConfirmarPassword" id="txtConfirmarPassword" class="form-control" value="@Model.password" />
                        </div>
                    </div>
                    <div class="form-group text-left">
                        <div class="col-sm-12">
                            <button class="btn btn-success" type="submit">
                                Guardar cambios
                            </button>
                            @Html.ActionLink("Cancelar", "PerfilCliente", "Cliente", null, new { @class = "text-center btn btn-warning" })
                        </div>
                        <div class="form-label-group text-danger" style="margin-left:10px">
                            @ViewBag.ErrorActualizarUsuario
                            @ViewBag.EmailYaRegistrado
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/validacionModificarUsuario.js"></script>


