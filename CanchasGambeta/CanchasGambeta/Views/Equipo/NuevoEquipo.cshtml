@using CanchasGambeta.Models;
@{var sesion = (Usuario)HttpContext.Current.Session["User"];}
@model CanchasGambeta.Models.Equipo
@{
    ViewBag.Title = "Nuevo equipo";
}

<div class="container" style="color: white; transform: translateY(60px);">
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h3>Cree un nuevo equipo para jugar o competir con sus amigos</h3>
            </div>
        </div>
    </div>
</div>

<div class="container" style="color: white; transform: translateY(60px);">
    @using (Html.BeginForm("NuevoEquipo", "Equipo", FormMethod.Post, new { onsubmit = "return validacionNuevoEquipo();" }))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Nombre del equipo</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(Model => Model.nombreEquipo, htmlAttributes: new { @class = "form-control", id = "txtNombreEquipo" })
                        </div>
                    </div>
                    <div class="form-label-group text-danger" style="margin-left:10px">
                        @ViewBag.ErrorCreacion
                    </div>
                    <div class="form-group text-left">
                        <div class="col-sm-12">
                            <button class="btn btn-primary" type="submit">
                                Registrar equipo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script src="~/Scripts/validacionRegistro-LogIn.js"></script>

