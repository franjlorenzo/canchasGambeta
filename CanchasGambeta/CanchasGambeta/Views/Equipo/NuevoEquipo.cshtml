@model CanchasGambeta.Models.Equipo
@{
    ViewBag.Title = "Nuevo equipo";
}

<div class="row" style="transform: translateY(60px); color: white">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3 class="text-center">Cree un nuevo equipo para jugar o competir con sus amigos</h3>
        @using (Html.BeginForm("NuevoEquipo", "Equipo", FormMethod.Post, new { onsubmit = "return validacionNuevoEquipo();" }))
        {
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label">Nombre del equipo</label>
                    @Html.TextBoxFor(Model => Model.nombreEquipo, htmlAttributes: new { @class = "form-control", id = "txtNombreEquipo" })
                </div>
                <div class="form-group text-left">
                    <button class="btn btn-primary" type="submit">
                        Registrar equipo
                    </button>
                    @Html.ActionLink("Cancelar", "IndexCliente", "Cliente", null, new { @class = "text-center btn btn-warning" })
                </div>
                <div class="form-label-group text-danger" style="margin-left:10px">
                    @ViewBag.ErrorCreacion
                </div>
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>

<script src="~/Scripts/scriptEquipo.js"></script>

