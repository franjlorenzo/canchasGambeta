@model CanchasGambeta.Models.Email
@{
    ViewBag.Title = "EliminarIntegrante";
}

<div class="container" style="color: white; transform: translateY(60px);">
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h3>¿Esta seguro de que desea eliminar a este integrante?</h3>
            </div>
        </div>
    </div>
</div>

<div class="container" style="color: white; transform: translateY(60px);">
    @using (Html.BeginForm("EliminarIntegrante", "Equipo", FormMethod.Post))
    {
        @Html.HiddenFor(Model => Model.idEmail)
        <div class="row">
            <div class="col-lg-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Correo electrónico</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(Model => Model.email1, htmlAttributes: new {@readonly = "readonly", @class = "form-control", id = "txtEmail" })
                        </div>
                    </div>
                    <div class="form-group text-left">
                        <div class="col-sm-12">
                            <button class="btn btn-success" type="submit">
                                Eliminar
                            </button>
                        </div>
                    </div>
                    <div class="form-label-group text-danger">
                        @ViewBag.ErrorEliminar
                    </div>
                </div>
            </div>
        </div>
    }
</div>

