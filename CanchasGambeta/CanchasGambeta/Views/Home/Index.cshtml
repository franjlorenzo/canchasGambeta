@{
    ViewBag.Title = "Index";
}

<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container">
            <h1 class="masthead-heading mb-0">Canchas Gambeta</h1>
            <h2 class="masthead-subheading mb-0">Complejo deportivo y recreativo</h2>
            <a href="#" class="btn btn-primary btn-xl rounded-pill mt-5">Reservar</a>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
</header>

<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
                <div class="p-5">
                    <img class="img-fluid rounded" src="~/Images/cancha-futbol.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 order-lg-1">
                <div class="p-5">
                    <h2 class="display-4" style="color:white">Para los fanáticos del fútbol...</h2>
                    <p style="color:#C3073F">Canchas de pasto sintético de máxima calidad con iluminación LED y arcos con medidas profesionales establecidas por la FIFA.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="p-5">
                    <img class="img-fluid rounded" src="~/Images/padel-wallpaper.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="p-5">
                    <h2 class="display-4" style="color:white">O para los que disfrutan de un buen pádel...</h2>
                    <p style="color:#C3073F">Canchas de cemento con paredes de acrílico reforzado para sacar máximo provecho al juego!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
                <div class="p-5">
                    <img class="img-fluid rounded" src="~/Images/tenis-wallpaper-2.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 order-lg-1">
                <div class="p-5">
                    <h2 class="display-4" style="color:white">Y para los amantes del tenis</h2>
                    <p style="color:#C3073F">Canchas de ladrillo con medidas estandares profesionales, tanto para jugar singles o dobles</p>
                </div>
            </div>
        </div>
    </div>
</section>