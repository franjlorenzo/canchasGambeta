@model CanchasGambeta.ViewModels.ReservaVM
@{
    ViewBag.Title = "MisReservas";
    List<SelectListItem> canchas = (List<SelectListItem>)ViewBag.canchas;
    List<SelectListItem> horarios = (List<SelectListItem>)ViewBag.horarios;
    List<SelectListItem> insumos = (List<SelectListItem>)ViewBag.insumos;
}

<div class="container">
    <div class="row" style="transform: translateY(60px);">
        <div class="col-md-6">
            <div>
                <h3 class="text-center" style="color:white">Mis reservas</h3>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row" style="transform: translateY(60px); color:white">
        <div class="col-md-12 text-center">
            <div class="container" id="divNuevoIntegrante" style="color:white; display:block;">
                <h4 class="p-1">Llene los siguientes campos para concretar una reserva:</h4>
                @using (Html.BeginForm("NuevaReserva", "Reserva", FormMethod.Post, new { onsubmit = "return validacionNuevaReserva();" }))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Fecha</label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(model => model.Fecha, new { @type = "date", @class = "form-control datepicker", @Value = Model.Fecha })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Cancha</label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("idCancha", canchas, "Seleccione una cancha", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Horario</label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("idHorario", horarios, "Seleccione el horario", htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <!--<div class="form-group">
                                        <label class="col-sm-6 control-label">Telefono</label>
                                        <div class="col-sm-6">
                                          
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Edad</label>
                                        <div class="col-sm-6">
                                            
                                        </div>
                                    </div>-->
                                <div class="form-group text-right">
                                    <div class="col-xs-12">
                                        <button class="btn btn-primary" type="submit">
                                            Registrar reserva
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-label-group text-danger" style="margin-left:10px">
                        @ViewBag.ErrorInsertIntegrante
                    </div>
                }
            </div>
        </div>
    </div>
</div>

