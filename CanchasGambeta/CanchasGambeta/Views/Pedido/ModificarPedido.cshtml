@model CanchasGambeta.Models.Pedido
@{
    List<SelectListItem> proveedores = (List<SelectListItem>)ViewBag.proveedores;
    ViewBag.Title = "ModificarPedido";
}

<div class="row" style="transform: translateY(60px); color:white">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3 class="text-center" style="color:white">Modificar pedido Nº @Model.idPedido</h3>
        @using (Html.BeginForm("ModificarPedido", "Pedido", FormMethod.Post, new { onsubmit = "return validacionModificarPedido();" }))
        {
            @Html.HiddenFor(Model => Model.idPedido)
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Proveedores</label>
                    @Html.DropDownList("proveedor", proveedores, "Seleccione un proveedor", htmlAttributes: new { @disabled = "disabled", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Descripción</label>
                    @Html.TextAreaFor(Model => Model.descripcion, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <button class="btn btn-success" type="submit">Modificar Pedido</button>
            @Html.ActionLink("Cancelar", "MisPedidos", "Pedido", null, new { @class = "text-center btn btn-warning" })
            <div class="form-label-group text-danger" style="margin-left:10px">
                @ViewBag.ErrorModificarPedido
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>

<script src="~/Scripts/scriptPedidos.js"></script>

