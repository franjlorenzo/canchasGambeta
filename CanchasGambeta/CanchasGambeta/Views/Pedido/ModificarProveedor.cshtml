@model CanchasGambeta.Models.Proveedor
@{
    ViewBag.Title = "ModificarProveedor";
}

<div class="row" style="transform: translateY(60px); color: white">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3 class="text-center">Modifique los datos del proveedor</h3>
        @using (Html.BeginForm("ModificarProveedor", "Pedido", FormMethod.Post, new { onsubmit = "return validacionModificarProveedor();" }))
        {
            @Html.HiddenFor(Model => Model.idProveedor)
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label">Nombre del proveedor</label>
                    @Html.TextBoxFor(Model => Model.nombreCompleto, htmlAttributes: new { @class = "form-control", id = "txtNombreProveedor" })
                </div>
                <div class="form-group">
                    <label class="control-label">Teléfono</label>
                    @Html.TextBoxFor(Model => Model.telefono, htmlAttributes: new { @class = "form-control", id = "txtTelefono" })
                </div>
                <div class="form-group">
                    <label class="control-label">Correo electrónico</label>
                    @Html.TextBoxFor(Model => Model.email, htmlAttributes: new { @class = "form-control", id = "txtEmail" })
                </div>
                <div class="form-group">
                    <label class="control-label">Empresa</label>
                    @Html.TextBoxFor(Model => Model.empresa, htmlAttributes: new { @class = "form-control", id = "txtEmpresa" })
                </div>
                <div class="form-group text-left">
                    <button class="btn btn-success" type="submit">
                        Confirmar cambios
                    </button>
                    @Html.ActionLink("Cancelar", "MisPedidos", "Pedido", null, new { @class = "text-center btn btn-warning" })
                </div>
                <div class="form-label-group text-danger">
                    @ViewBag.ErrorModificarProveedor
                </div>
            </div>
        }
    </div>
    <div class="col-md-3"></div>
</div>

<script src="~/Scripts/scriptPedidos.js"></script>

