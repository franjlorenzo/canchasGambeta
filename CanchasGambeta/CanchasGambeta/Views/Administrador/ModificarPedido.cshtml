@model CanchasGambeta.Models.Pedido
@{
    List<SelectListItem> proveedores = (List<SelectListItem>)ViewBag.proveedores;
    ViewBag.Title = "ModificarPedido";
}

<div class="container">
    <div class="row" style="transform: translateY(60px);">
        <div class="col-md-6">
            <div>
                <h3 class="text-center" style="color:white">Modificar pedido Nº @Model.idPedido</h3>
            </div>
        </div>
    </div>
</div>

<div class="col-md-6" style="transform: translateY(60px);">
    <div class="container" id="divNuevoPedido" style="color:white; display:block;">
        @using (Html.BeginForm("ModificarPedido", "Administrador", FormMethod.Post, new { onsubmit = "return validacionModificarPedido();" }))
        {
            @Html.HiddenFor(Model => Model.idPedido)
            <div class="row  text-center">
                <div class="col-lg-12">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div>
                                <label class="col-sm-6 control-label">Proveedores</label>
                                @Html.DropDownList("proveedor", proveedores, "Seleccione un proveedor", htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div>
                                <label class="col-sm-6 control-label">Descripción</label>
                                @Html.TextAreaFor(Model => Model.descripcion, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button class="btn btn-success" type="submit">Modificar Pedido</button>
            @Html.ActionLink("Cancelar", "MisPedidos", "Administrador", null, new { @class = "text-center btn btn-warning" })
            <div class="form-label-group text-danger" style="margin-left:10px">
                @ViewBag.ErrorModificarPedido
            </div>
        }
    </div>
</div>

<script src="~/Scripts/scriptPedidos.js"></script>

